# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Database Configuration
DATABASE_URL=postgresql://freecord_user:freecord_password@postgres:5432/freecord

# Redis Configuration  
REDIS_URL=redis://redis:6379

# LiveKit Configuration (Self-hosted)
# Generate these using: docker run --rm livekit/livekit-server generate-keys
LIVEKIT_API_KEY=your_livekit_api_key_here
LIVEKIT_API_SECRET=your_livekit_api_secret_here
# Server-side URL (internal Docker network) - used by RoomServiceClient
LIVEKIT_SERVER_URL=http://livekit:7880
# Client-side URL (external domain for browsers) - used by client WebSocket connections
NEXT_PUBLIC_LIVEKIT_URL=wss://livekit.miyov.io

# LiveKit Webhook (for advanced features)
LIVEKIT_WEBHOOK_SECRET=your_webhook_secret_here

# Application Configuration
NEXT_PUBLIC_APP_URL=https://miyov.io
NEXTAUTH_URL=https://miyov.io
NEXTAUTH_SECRET=your_nextauth_secret_here

# File Upload Configuration
UPLOADTHING_SECRET=your_uploadthing_secret_here
UPLOADTHING_APP_ID=your_uploadthing_app_id_here

# Optional: Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here
