# Docker Environment Variables
# Copy this file to .env and fill in your actual values

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
DEV_NEXT_PUBLIC_APP_URL=https://dev.miyov.io

# Database (override only if different)
DATABASE_URL=postgresql://freecord_user:freecord_password@postgres:5432/freecord

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key
DEV_NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_dev_clerk_publishable_key
DEV_CLERK_SECRET_KEY=sk_test_dev_clerk_secret_key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# LiveKit (Voice/Video Calls)
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret
NEXT_PUBLIC_LIVEKIT_URL=wss://your-project.livekit.cloud
# Dev LiveKit
DEV_LIVEKIT_API_KEY=your_dev_livekit_api_key
DEV_LIVEKIT_API_SECRET=your_dev_livekit_api_secret
# If not using a reverse proxy, expose the LiveKit dev port directly
# and use a port-based WSS URL (requires TLS termination elsewhere):
DEV_NEXT_PUBLIC_LIVEKIT_URL=wss://dev.miyov.io:17880

# Redis
REDIS_URL=redis://redis:6379
DEV_REDIS_URL=redis://redis:6379

# Feature Flags
ENABLE_DEVELOPMENT_FEATURES=false
DEV_ENABLE_DEVELOPMENT_FEATURES=true